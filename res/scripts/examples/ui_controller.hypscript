class TestScript {
    scene: Scene = null;
    entity: uint = ~0u;

    func OnAdded(scene: Scene, entity: uint) {
        self.scene = scene;
        self.entity = entity;
    }

    func OnRemoved() {
        self.scene = null;
        self.entity = ~0u;
    }

    func OnUpdate(dt: float) {
        Logger.log(Logger.DEBUG, "Update entity {0} {1}", self.entity, dt);
    }
}

export const controller = TestScript();