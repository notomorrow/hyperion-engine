const PI: float = 3.14159265;

func Sign<T>(num : T)
{
    return (num > 0) ? 1 : ((num < 0) ? -1 : 0);
}

func Abs<T>(num : T)
{
    return num < 0 ? -num : num;
}

func Floor<T>(num : T)
{
    if num >= 0 {
        return num - (num % 1);
    }

    return num - 1 - (num % 1);
}

func Ceil<T>(num : T)
{
    if num >= 0 {
        return num + 1 - (num % 1);
    }

    return num - (num % 1);
}